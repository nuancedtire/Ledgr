<style>
  .login-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: 2rem;
  }

  .login-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 3rem;
    max-width: 420px;
    width: 100%;
    text-align: center;
  }

  .login-logo {
    margin-bottom: 2rem;
  }

  .login-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 0.5rem;
  }

  .login-logo h1 {
    font-family: var(--font-serif);
    font-size: 2.5rem;
    color: var(--text-primary);
    margin: 0;
  }

  .login-subtitle {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }

  .login-body {
    margin-bottom: 2rem;
  }

  .login-desc {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .btn-login {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
  }

  .btn-login:hover {
    background: var(--bg-card-hover);
    border-color: var(--accent-emerald);
    color: var(--accent-emerald);
  }

  .login-footer {
    border-top: 1px solid var(--border-subtle);
    padding-top: 1.5rem;
  }

  .login-footer p {
    color: var(--text-muted);
    font-size: 0.8rem;
    line-height: 1.5;
  }
</style>
