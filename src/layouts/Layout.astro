---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Ledgr \u2014 Financial Dashboard' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Personal financial dashboard with AI-powered insights" />
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ctext y='80' font-size='80'%3E%F0%9F%92%B0%3C/text%3E%3C/svg%3E" />
    <title>{title}</title>
  </head>
  <body>
    <div class="noise-overlay"></div>
    <div class="ambient-glow"></div>
    <div class="ambient-glow-2"></div>
    <slot />
  </body>
</html>
